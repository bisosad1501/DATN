# ============================================
# Environment Variables for IELTS Learning Platform
# ============================================
# Copy this file to .env and update with your values
# DO NOT commit .env file to version control

# ============================================
# Database Configuration
# ============================================
POSTGRES_USER=ielts_admin
POSTGRES_PASSWORD=ielts_password_2025
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=ielts_redis_password

# ============================================
# PgAdmin Configuration
# ============================================
PGADMIN_DEFAULT_EMAIL=admin@ieltsgo.com
PGADMIN_DEFAULT_PASSWORD=admin_password

# ============================================
# RabbitMQ Configuration
# ============================================
RABBITMQ_USER=ielts_admin
RABBITMQ_PASSWORD=ielts_rabbitmq_password
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672

# ============================================
# JWT Configuration
# ============================================
# IMPORTANT: Change this in production!
JWT_SECRET=your_jwt_secret_key_minimum_32_characters_long_change_in_production
JWT_EXPIRY=24h
REFRESH_TOKEN_EXPIRY=168h

# ============================================
# Google OAuth Configuration
# ============================================
# Get credentials from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id_here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URL=http://localhost:8080/api/v1/auth/google/callback

# ============================================
# AI Service Configuration
# ============================================
# OpenAI API (for Writing and Speaking evaluation)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Alternative AI providers (optional)
# ANTHROPIC_API_KEY=your_anthropic_api_key
# GOOGLE_AI_API_KEY=your_google_ai_api_key

# Speech-to-Text Service
# GOOGLE_SPEECH_API_KEY=your_google_speech_api_key
# AZURE_SPEECH_KEY=your_azure_speech_key
# AZURE_SPEECH_REGION=your_azure_region

# ============================================
# Notification Service Configuration
# ============================================
# Firebase Cloud Messaging (for Android push notifications)
FCM_SERVER_KEY=your_fcm_server_key_here
FCM_PROJECT_ID=your_firebase_project_id

# Email Service (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password
SMTP_FROM_EMAIL=noreply@ielts-platform.com
SMTP_FROM_NAME=IELTS Learning Platform

# Alternative: SendGrid
# SENDGRID_API_KEY=your_sendgrid_api_key

# Alternative: AWS SES
# AWS_SES_ACCESS_KEY=your_aws_access_key
# AWS_SES_SECRET_KEY=your_aws_secret_key
# AWS_SES_REGION=us-east-1

# ============================================
# File Storage Configuration
# ============================================
# Local storage (default)
STORAGE_TYPE=local
STORAGE_PATH=/uploads

# AWS S3 (optional)
# STORAGE_TYPE=s3
# AWS_S3_BUCKET=your-bucket-name
# AWS_S3_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key

# Google Cloud Storage (optional)
# STORAGE_TYPE=gcs
# GCS_BUCKET=your-bucket-name
# GCS_PROJECT_ID=your-project-id
# GCS_KEY_FILE=/path/to/key.json

# ============================================
# Application Configuration
# ============================================
# Environment: development, staging, production
APP_ENV=development

# API Gateway
API_GATEWAY_PORT=8080

# Service Ports
AUTH_SERVICE_PORT=8081
USER_SERVICE_PORT=8082
COURSE_SERVICE_PORT=8083
EXERCISE_SERVICE_PORT=8084
AI_SERVICE_PORT=8085
NOTIFICATION_SERVICE_PORT=8086

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=info
LOG_FORMAT=json

# ============================================
# CORS Configuration
# ============================================
# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# ============================================
# Monitoring & Analytics (Optional)
# ============================================
# Sentry for error tracking
# SENTRY_DSN=your_sentry_dsn

# Google Analytics
# GA_TRACKING_ID=your_ga_tracking_id

# ============================================
# PgAdmin Configuration
# ============================================
PGADMIN_EMAIL=admin@ielts.local
PGADMIN_PASSWORD=admin_password
PGADMIN_PORT=5050

# ============================================
# Development Settings
# ============================================
# Enable debug mode (only for development)
DEBUG=true
ENABLE_SWAGGER=true

# Hot reload for development
ENABLE_HOT_RELOAD=true

# ============================================
# Security Settings
# ============================================
# Password hashing rounds (bcrypt)
BCRYPT_ROUNDS=12

# Session timeout (in minutes)
SESSION_TIMEOUT=1440

# Maximum file upload size (in MB)
MAX_FILE_UPLOAD_SIZE=50

# ============================================
# Feature Flags
# ============================================
FEATURE_AI_GRADING_ENABLED=true
FEATURE_SOCIAL_LOGIN_ENABLED=false
FEATURE_PAYMENT_ENABLED=false
FEATURE_LIVE_CLASSES_ENABLED=false
